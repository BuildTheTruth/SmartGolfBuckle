<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_scorePerHole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hole"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:padding="5dp"
            android:text="#"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_par"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:padding="5dp"
            android:text="par"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:padding="5dp"
            android:text="score"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_putt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:padding="5dp"
            android:text="putt"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_gir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:padding="5dp"
            android:text="gir"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_fwhit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border"
            android:gravity="center"
            android:padding="5dp"
            android:text="fwhit"
            android:textSize="18sp" />

    </LinearLayout>

</layout>